EXIT MACRO
	MOV AX,4C00H										; Salir a MS-DOS
	INT 21H
ENDM

DRAW MACRO COLOR,START_POSITION,END_POSITION
	MOV AX,0600H										; INT Pintado en pantalla
	MOV BH,COLOR										; Colores
	MOV CX,START_POSITION						; Inicio
	MOV DX,END_POSITION						; Fin
	INT 10H												; Ejecutar interrupción
ENDM

